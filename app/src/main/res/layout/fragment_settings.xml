<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    >

    <LinearLayout
        android:id="@+id/add_wallet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:elevation="0.5dp"
        android:textStyle="bold"
        android:background="@drawable/myrect"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:src="@drawable/ic_account_balance_wallet_black_24dp"
            android:layout_height="75dp" />
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:textColor="#9cc881"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Add wallet" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/bank_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:elevation="0.5dp"
            android:textStyle="bold"
            android:background="@drawable/myrect"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:src="@drawable/bank"
                android:layout_height="75dp" />
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:textColor="#9cc881"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Bank account" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/notification_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:elevation="0.5dp"
            android:textStyle="bold"
            android:background="@drawable/myrect"
            >
            <ImageView
                android:id="@+id/notification"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:src="@drawable/notification_24dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:textColor="#9cc881"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Notifications" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/general_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:elevation="0.5dp"
            android:textStyle="bold"
            android:background="@drawable/myrect"
            >
            <ImageView
                android:id="@+id/general"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:src="@drawable/settings_24dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:textColor="#9cc881"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="General" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/privacy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:elevation="0.5dp"
            android:textStyle="bold"
            android:background="@drawable/myrect"
            >
            <ImageView
                android:id="@+id/privacy"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:src="@drawable/privacy_24dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:textColor="#9cc881"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Privacy" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/backup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:elevation="0.5dp"
            android:textStyle="bold"
            android:background="@drawable/myrect"
            >
            <ImageView
                android:id="@+id/backup"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_backup_black_24dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:textColor="#9cc881"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Backup" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/block_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:elevation="0.5dp"
            android:textStyle="bold"
            android:background="@drawable/myrect"
            >
            <ImageView
                android:id="@+id/block"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:src="@drawable/block_24dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:textColor="#9cc881"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Block" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/help_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:elevation="0.5dp"
            android:textStyle="bold"
            android:background="@drawable/myrect"
            >
            <ImageView
                android:id="@+id/help"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:src="@drawable/help_24dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:textColor="#9cc881"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Help" />
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wastless 2020 \u00a9"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        />
</LinearLayout>
    </ScrollView>

